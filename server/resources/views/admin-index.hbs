<div class="container my-4">
    <h2 class="text-center my-2">Manage Product</h2>
    <a href="/admin-new-product" class="btn btn-primary my-2">Create Product</a>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No</th>
                <th scope="col">Product Name</th>
                <th scope="col">Price</th>
                <th scope="col">Quantity</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <th scope="row">{{index @index 1}}</th>
                <td class="row align-items-center">
                    <img src="img/product/{{img}}" style="width: 6rem;" class="mr-4">
                    {{!-- <img src="/img/product/{{img}}" style="width: 6rem;" class="mr-4"> --}}
                    <div>{{productName}}</div>
                </td>
                <td class="td-middle">$ {{price}}</td>
                <td class="td-middle">{{quantity}}</td>
                <td class="td-middle">
                    <a href="/admin-update-product/{{_id}}" class="btn btn-primary">Update</a>
                    <strong>|</strong>
                    <a href="/admin-delete-product/{{_id}}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>